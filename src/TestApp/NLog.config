<?xml version="1.0" encoding="utf-8"?>
<!-- 
  This file needs to be put in the application directory. Make sure to set 
  'Copy to Output Directory' option in Visual Studio.
-->
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:syslog="https://github.com/graffen/NLog.Targets.Syslog/tree/master/src/schemas/NLog.Targets.Syslog.xsd">
  <extensions>
    <add assembly="NLog.Targets.Syslog" />
  </extensions>
  <variable name="enterpriseId" value="12345"/>
  <variable name="sequenceId" value="1"/>
  <targets>
    <target xsi:type="File" name="file-tgt">
      <layout xsi:type="SimpleLayout" text="${longdate} ${level} ${message}" />
      <encoding>utf-8</encoding>
      <createDirs>true</createDirs>
      <fileName xsi:type="SimpleLayout">
        <text>${basedir}/log.txt</text>
      </fileName>
    </target>
    <target xsi:type="syslog:Syslog" name="syslog3164-tgt">
      <layout xsi:type="SimpleLayout" text="${message} ${exception:format=ToString,StackTrace}" />
      <sysLogServer>127.0.0.1</sysLogServer>
      <port>1514</port>
      <facility>Local4</facility>
      <protocol>TCP</protocol>
      <ssl>false</ssl>
      <splitNewlines>false</splitNewlines>
      <rfc>Rfc3164</rfc>
      <rfc3164 hostname="myHost" tag="myTag" />
    </target>
    <target xsi:type="syslog:Syslog" name="syslog5424-tgt">
      <layout xsi:type="SimpleLayout" text="${message} ${exception:format=ToString,StackTrace}" />
      <sysLogServer>127.0.0.1</sysLogServer>
      <port>1514</port>
      <facility>Local4</facility>
      <protocol>UDP</protocol>
      <ssl>false</ssl>
      <splitNewlines>false</splitNewlines>
      <rfc>Rfc5424</rfc>
      <rfc3164 hostname="notUsedHostname" tag="notUsedTag" />
      <rfc5424 protocolVersion="1" hostname="${machinename}" appName="${logger}" procId="${processid}" msgId="testMsgId">
        <structuredData>
          <sdElement sdId="thread@${enterpriseId}">
            <sdParam name="id" value="${threadid}" />
            <sdParam name="myParam" value="myValue" />
          </sdElement>
          <sdElement sdId="timeQuality">
            <sdParam name="tzKnown" value="1" />
            <sdParam name="isSynced" value="1" />
            <sdParam name="syncAccuracy" value="60000000" />
          </sdElement>
          <sdElement sdId="origin">
            <sdParam name="ip" value="10.10.10.1" />
            <sdParam name="ip" value="192.0.2.1" />
            <sdParam name="enterpriseId" value="${enterpriseId}" />
            <sdParam name="software" value="MyAmazingSw" />
            <sdParam name="swVersion" value="3.5" />
          </sdElement>
          <sdElement sdId="meta">
            <sdParam name="sequenceId" value="${sequenceId}" />
            <sdParam name="sysUpTime" value="30200" />
            <sdParam name="language" value="en-US" />
          </sdElement>
        </structuredData>
      </rfc5424>
    </target>
    <target xsi:type="syslog:Syslog" name="syslogcee-tgt">
      <layout xsi:type="SimpleLayout" text="@cee: {&quot;message&quot;: &quot;${message}&quot;}" />
      <sysLogServer>127.0.0.1</sysLogServer>
      <port>1514</port>
      <facility>Local4</facility>
      <protocol>UDP</protocol>
      <ssl>false</ssl>
      <splitNewlines>false</splitNewlines>
      <rfc>Rfc5424</rfc>
      <rfc3164 hostname="notUsedHostname" tag="notUsedTag" />
      <rfc5424 protocolVersion="1" hostname="${machinename}" appName="DAEMON.MyAppName.${logger}" procId="${processid}" msgId="" />
    </target>
  </targets>
  <rules>
    <logger name="*" minlevel="Trace" maxlevel="Trace" writeTo="file-tgt" />
    <logger name="*" minlevel="Debug" maxlevel="Debug" writeTo="syslog3164-tgt" />
    <logger name="*" minlevel="Info" maxlevel="Info" writeTo="syslog5424-tgt" />
    <logger name="*" minlevel="Warn" writeTo="syslogcee-tgt" />
  </rules>
</nlog>